<%- include ('partials/header'); -%>
    <h1>Investor</h1>
    <div class="formBusiness">
        <% for(var i=0; i < business_info.length; i++) { %>
            <td><%= business_info[i].name %></td>
            <td><%= business_info[i].industry %></td>
            <td><%= business_info[i].funding_asked %></td>
            <td><%= business_info[i].addr %></td>
            <% } %>

            <div class="form-group row fundingBusiness">
                <label class="col-sm-2 col-form-label" for="investAmount" >Business Address</label>
                <div class="col-sm-10">
                    <input type="text" id="investBusiness" class="form-control" id="investBusiness" name="investBusiness"
                        placeholder="Example: 0x4E36...">
                </div>
            </div>
            <div class="form-group row fundingBusiness">
                <label class="col-sm-2 col-form-label" for="investAmount" >Amount to Invest</label>
                <div class="col-sm-10">
                    <input type="number" id="investAmt" class="form-control" id="investAmt" name="investAmt"
                        placeholder="Example: $20000">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button id="startInvesting" type="submit" class="btn btn-primary">Invest!</button>
                </div>
            </div>
    </div>
    <%- include ('partials/footer'); -%>